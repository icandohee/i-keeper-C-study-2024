#include <stdio.h>

int main() { 
    int num; 

    printf("1에서 100 사이의 숫자를 입력하세요: ");
    scanf("%d",&num);

    printf("\n");

    for ( int i = num ; i>0 ; i--) { 
        for( int j = 1;j<i;j++){
            printf(" ");
        }
        for ( int k = i; k<=num;k++){
            printf("*");
        }
        printf("\n");
    }
    return 0; 
}
